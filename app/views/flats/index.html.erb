<h1>All our Flats (4)</h1>
  <div class="d-flex justify-content-between">
    <% @flats.each do |flat| %>
    <div class="card" style="width: 18rem;">
      <img src="https://picsum.photos/200/300" class="card-img-top" alt="...">
      <div class="card-body">
      <h5 class="card-title"><%= flat.name %></h5>
      <p class="card-text"><%= flat.address %></p>
      <div class="d-flex justify-content-between">
      <p><i class="fas fa-user"></i><%= flat.number_of_guests %> </p>
      <p><i class="fas fa-euro-sign"></i><%= flat.price_per_night %></p>
      </div>
      <div class="d-flex justify-content-between">
      <%= link_to "More info", flat, class: "btn btn-outline-primary" %>
      <%= link_to "Edit", edit_flat_path(flat), class: "btn btn-outline-warning" %>
      <%= link_to "Remove", flat_path(flat), class: "btn btn-outline-danger", method: :delete, data: {:confirm =>"Are you sure?"}  %>
      </div>
    </div>
  </div>
  <% end %>
  </div>
